<style>
    .cardcontainer {
        width: 80%;
        display: flex;
        flex-direction: column;
        row-gap: 30px;
        margin: 50px auto;

    }

    .card {
        display: flex;
        flex-direction: revert;
        column-gap: 72px;
        align-items: center;
        padding: 10px 30px;
        box-sizing: border-box;
        background-color: aliceblue;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }

    p {
        font-size: 20px;
        font-weight: 600;
    }


    .delete {
        border: none;
        background: #ff0000bd;
        color: white;
        padding: 6px;
        font-size: 14px;
        letter-spacing: 1px;
        font-weight: 600;
        border-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
    }

    a {
        margin-right: 6%;
    }
</style>

<body>
    {{> header profile=true}}

    <h2 style="width: 80%;margin: auto;margin-top: 30px;">My shop</h2>

    {{#if nopets}}
    <p style="width: 80%;
    margin: auto;
    margin-top: 30px;
    text-align: center;">Sell your first pet</p>
    <a href="/upload"><button style="margin: auto;
    margin-left: 46%;
    margin-right: 44%;
    margin-top: 100px;
    border: none;
    background: #008000c7;
    color: white;
    font-size: 18px;
    padding: 5px 20px;
    border-radius: 10px;
}">Sell Now</button></a>
    {{/if}}

    <div class="cardcontainer">
        {{#each mypets}}


        <div class="card">
            <a href="details?dataID={{this._id}}">

                <img style="width: 200px;height: 250px;object-fit: contain;" src="/petimages/{{this.image1}}" alt="">
            </a>
            <div>
                <p>{{this.name}}</p>
                <p>Rs {{this.price}}</p>
            </div>
            <div class="deletepost">
                <a href="/delete?petID={{this._id}}">
                    <button class="delete">
                        Delete Post
                    </button>
                </a>
            </div>
        </div>

        {{/each}}
    </div>
    <footer class="footer">
